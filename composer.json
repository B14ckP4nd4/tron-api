{
    "name": "blackpanda/tron-api",
    "description": "A PHP API for interacting with Tron (Trx)",
    "license": "MIT",
    "type":   "library",
    "homepage": "https://github.com/B14ckP4nd4/laravel-tron",
    "authors": [
        {
            "name": "Shamsudin Serderov",
            "email": "steein.shamsudin@gmail.com"
        },
        {
            "name": "BlackPanda",
            "email": "46260610+B14ckP4nd4@users.noreply.github.com"
        }
    ],
    "keywords": [
        "iexbase",
        "tron-lib",
        "tron-php",
        "tron-api",
        "tron-rest-api"
    ],

    "require": {
        "php": "^7.4|^8.0|^8.1",
        "comely-io/data-types": "^1.0",
        "guzzlehttp/guzzle": "^7.0",
        "iexbase/web3.php": "^2.0.1",
        "kornrunner/secp256k1": "^0.1.2",
        "simplito/elliptic-php": "^1.0",
        "ext-json": "*",
        "ext-bcmath": "*"
    },

    "require-dev": {
        "phpunit/phpunit": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "BlackPanda\\TronAPI\\": "src"
        }
    },

    "extra": {
        "laravel": {
            "providers": [
                "BlackPanda\\TronAPI\\TronServiceProvider"
            ]
        }
    },

    "autoload-dev": {
        "psr-4": {
            "BlackPanda\\TronAPI\\Test\\": "tests"
        }
    },

    "config": {
        "sort-packages": true
    },

    "minimum-stability": "dev",
    "prefer-stable": true
}
